<h2>Find a Match for <%= @pet.name %></h2>

<% if @potential_pets.any? %>
  <% @potential_pets.each do |potential_pet| %>
    <div class="pet-card">
      <h3><%= potential_pet.name %></h3>
      <p>Age: <%= potential_pet.age %></p>
      <p>Breed: <%= potential_pet.breed %></p>


      <%= button_to '❤️ Swipe Right', process_swipe_pet_path(@pet, liked_pet_id: potential_pet.id), method: :post, class: "btn btn-success" %>
    </div>
  <% end %>
<% else %>
  <p>No more pets available for swiping!</p>
<% end %>

<%= link_to 'Back to My Pets', pets_path, class: "btn btn-secondary" %>
