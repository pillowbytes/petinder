<h1>Pets#show</h1>

<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-center">
          <% if @pet.photos.attached? %>
            <%= cl_image_tag @pet.photos.first.key, transformation: [{ width: 300, height: 300, crop: "fill" }], alt: "#{@pet.name}'s profile picture", class: "avatar-main-profile" %>
          <% else %>
            <%= image_tag "pet_placeholder.webp", alt: "Default pet profile picture", class: "avatar-main-profile" %>
          <% end %>
        </div>
      </div>
      <h2 class="card-title text-center"><%= @pet.name %></h2>
      <h6 class="text-muted text-center"><%= @pet.species %> | <%= @pet.breed %></h6>

      <hr>

      <p class="mb-1"><strong>Age:</strong> <%= @pet.age %> years</p>
      <p class="mb-1"><strong>Gender:</strong> <%= @pet.gender.capitalize %></p>
      <p class="mb-1"><strong>Size:</strong> <%= @pet.size.capitalize %></p>
      <p class="mb-1"><strong>Age Group:</strong> <%= @pet.age_group.capitalize %></p>
      <p class="mb-3"><strong>Bio:</strong> <%= @pet.bio.presence || 'No bio provided' %></p>

      <hr>

      <p class="mb-1"><strong>Temperament:</strong> <%= @pet.temperament.capitalize %></p>
      <p class="mb-1"><strong>Personality Traits:</strong>
        <%= @pet.personality_traits.any? ? @pet.personality_traits.join(', ') : 'Not specified' %>
      </p>

      <hr>

      <p class="mb-1"><strong>Looking For:</strong> <%= @pet.looking_for.join(', ') %></p>
      <p class="mb-1"><strong>Preferred Species:</strong> <%= @pet.preferred_species.join(', ') %></p>
      <p class="mb-1"><strong>Preferred Size:</strong>
        <%= @pet.preferred_size.any? ? @pet.preferred_size.join(', ') : 'Not specified' %>
      </p>

      <hr>

      <p class="mb-1"><strong>Medical Conditions:</strong>
        <%= @pet.medical_conditions.any? ? @pet.medical_conditions.join(', ') : 'None' %>
      </p>

      <hr>

      <p class="mb-1"><strong>Vaccinated:</strong> <%= @pet.is_vaccinated ? 'Yes' : 'No' %></p>
      <p class="mb-1"><strong>Neutered:</strong> <%= @pet.is_neutered ? 'Yes' : 'No' %></p>
      <p class="mb-1"><strong>Available for Breeding:</strong> <%= @pet.is_available_for_breeding ? 'Yes' : 'No' %></p>
      <p class="mb-1"><strong>Registered Pedigree:</strong> <%= @pet.registered_pedigree ? 'Yes' : 'No' %></p>

      <hr>

      <p class="mb-1"><strong>Status:</strong> <%= @pet.status.capitalize %></p>

      <%= link_to "Start Swiping", swipe_pet_path(@pet), method: :get, class: "pet-btn-accent mt-3" %>
      <%= link_to "Edit Pet", edit_pet_path, class: "pet-btn-disabled mt-3" %>
      <%= link_to "Back to Pets", pets_path, class: "pet-btn-accent mt-3" %>
    </div>
  </div>
</div>
