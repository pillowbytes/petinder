<div class="home_image">
  <%= image_tag 'home_img.png', alt: "Two dogs on the grass" %>
</div>

<div class="centered-container animate__animated animate__fadeIn">
  <%= image_tag 'matchpetlogo.png', alt: "matchpet-icon" %>
</div>

<% if user_signed_in? %>
  <!-- Show "My Pets" link and Log Out button when user is logged in -->
  <div class="container-cadastre-btn animate__animated animate__zoomIn">
    <%= link_to "Socialize", select_pet_path, class: "pet-btn-secondary" %>

  </div>

  <div class="container-login-btn">
    <%= link_to "Logout", destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "pet-btn-primary" %>
  </div>
<% else %>
  <!-- Show Login and Create Account buttons when user is NOT logged in -->
  <div class="text-center">
    <div class="container-login-btn">
      <%= link_to "Entrar", new_user_session_path, class: "pet-btn-primary" %>
    </div>

    <div class="container-cadastre-btn">
      <%= link_to "Criar uma conta", new_user_registration_path, class: "pet-btn-secondary" %>
    </div>
  </div>
<% end %>
