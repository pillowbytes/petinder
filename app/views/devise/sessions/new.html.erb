<div style="margin-top: 100px">
  <div class="header">
    <h2>Bem-vindo de volta!ğŸ˜Š</h2>
    <p>Entre na sua conta para continuar<br>seus matches</p>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal", autocomplete: "on" }) do |f| %>
    <div class="form-inputs">
      <%= f.label :email, "E-mail" %>
      <%= f.input :email, required: false, autofocus: true, label: false,  input_html: { class: "form-control", placeholder: "we@matchpet.com" } %>

      <%= f.label :password, "Senha" %>
      <%= f.input :password, required: false, label: false, input_html: { class: 'form-control', placeholder: 'â€¢â€¢â€¢â€¢â€¢â€¢', autocomplete: "new-password" } %>

      <%= f.check_box :remember_me, as: :boolean, style: "margin-right: 5px;" if devise_mapping.rememberable? %>
      <%= f.label :remember_me, "Lembre de mim"%>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Entrar", class: 'pet-btn-primary' %><br>
      <%= link_to "Criar uma conta", new_user_registration_path, class: "pet-btn-secondary" %><br>
      <%= link_to "Esqueceu sua senha?", new_user_password_path, class: "pet-link" %>
      </div>
      <% end %>
    </div>

