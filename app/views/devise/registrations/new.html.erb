<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <div class="form-group">
      <%= f.label :email, "E-mail", class: 'control-label' %>
      <%= f.input :email, required: true, autofocus: true, label: false, input_html: { class: "form-control", placeholder: "E-mail" } %>
    </div>

    <div class="form-group">
      <%= f.label :first_name, "Nome", class: 'control-label' %>
      <%= f.input :first_name, required: true, label: false, input_html: { class: "form-control", placeholder: "Nome" } %>
    </div>

    <div class="form-group">
      <%= f.label :last_name, "Sobrenome", class: 'control-label' %>
      <%= f.input :last_name, required: true, label: false, input_html: { class: "form-control", placeholder: "Sobrenome" } %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Senha", class: 'control-label' %>
      <%= f.input :password, required: true, label: false, hint: (" MÃ­nimo de #{@minimum_password_length} caracteres" if @minimum_password_length), input_html: { class: 'form-control', placeholder: 'â€¢â€¢â€¢â€¢â€¢â€¢', autocomplete: "new-password" } %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirme sua senha", class: 'control-label' %>
      <%= f.input :password_confirmation, required: true, label: false, input_html: { class: "form-control", placeholder: "â€¢â€¢â€¢â€¢â€¢â€¢", autocomplete: "new-password" } %>
    </div>
  </div>


  <div class="add_pet_btn text-center">
    <%= link_to new_pet_path do %>
      <%= image_tag 'add-button.svg', alt: "Add pet button" %>
    <% end %>
    <p>Adicione o seu pet</p>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Cadastrar", class: 'pet-btn-primary' %>
  </div>

<% end %>

